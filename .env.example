# Fitness Rewards Environment Configuration
# Copy this file to .env and update the values for your setup

# === Common Configuration ===
# API authentication key - CHANGE THIS!
API_KEY=your-secret-api-key-123

# Server URL (adjust for Docker/local setup)
SERVER_URL=http://localhost:8000

# === Server Configuration ===
DATABASE_URL=sqlite:///./data/fitness_rewards.db
HOST=0.0.0.0
PORT=8000

# === Telegram Bot Configuration ===
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
BALANCE_CHECK_INTERVAL=60
LOW_BALANCE_THRESHOLD=50
MAX_TRANSACTIONS_IN_NOTIFICATION=3

# === Home Assistant TV Consumer Configuration ===
HA_URL=http://homeassistant:8123
HA_TOKEN=your-ha-token
HA_CONFIG_FILE=./data/ha_devices.json
CHECK_INTERVAL=60
POINTS_PER_CHECK=1